<script src="jquery-1.6.4.min.js"></script>
<script type="text/javascript">
    $(function(){
    	$(".menu li a .icon").mouseover(function(){
    		$(this).animate({'bottom':"-150px"},"fast");
    		$(this).css('display',"none");
    		$(this).next().animate({'bottom':"0px"},"fast");
    		$(this).next().css('display',"inline");
    		
    		
    	});
    	$(".menu li a .hover-icon").mouseout(function(){
    		$(this).animate({'bottom':"150px"},"fast");
    		$(this).css('display',"none");	
    		$(this).prev().css('display',"inline");
    		$(this).prev().animate({'bottom':"0"},"fast");	
    	});
    	$("#aboutblog").hover(function(){
    		$("#colour_blog").animate({'margin-left':"240px"});
    	},function(){
    		$("#colour_blog").animate({'margin-left':"0px"});
    	});
    	$("#covergithub").hover(function(){
    		$("#aboutgithub").animate({'opacity':"0.99"});
    	},function(){
    		$("#aboutgithub").animate({'opacity':"0.2"});
    	});
    	$("#aboutme").hover(function(){
    		$("#aboutme_cover").animate({'width':"550px"});
    	},function(){
    		$("#aboutme_cover").animate({'width':"20px"});
    	});


    });
</script>

